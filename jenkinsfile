pipeline {
    agent{
        label 'master'
    }
    stages {
        stage('pull src code') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/BaherFawzy/flask_dockerApp.git'
            }
        }
        
        stage('build docker image'){
            steps{
                sh "docker build -t baher421/getting-started:$BUILD_NUMBER ."
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'pass', usernameVariable: 'user')]) {
                sh "docker login -u $user -p $pass"
                sh "docker push baher421/getting-started:$BUILD_NUMBER"
}
            }
        }
        
        stage('test'){
            steps{
                echo "no test cases found"
            }
        }
        
        stage('deploy'){
            steps{
                sh "docker run -d -p 500$BUILD_NUMBER:8008 baher421/getting-started:$BUILD_NUMBER"
            }
        }
    }
}
